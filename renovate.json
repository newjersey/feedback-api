{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "baseBranches": ["dev"],
  "transitiveRemediation": true,
  "ignoreDeps": ["node", "@types/node"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeStrategy": "rebase"
    }
  ]
}
